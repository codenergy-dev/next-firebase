{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "next-firebase/client": ["src/client"],
      "next-firebase/server": ["src/server"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
